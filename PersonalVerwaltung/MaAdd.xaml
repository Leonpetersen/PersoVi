<Window x:Class="PersonalVerwaltung.MaAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:PersonalVerwaltung"
        mc:Ignorable="d"
        Title="MaAdd" Height="550" Width="400" 
        Background="Transparent"
        WindowStyle="None"
        MouseMove="onMouseMove"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <local:OrtList x:Key="ortList"/>
        <local:AbteilungList x:Key="abteilungList"/>
        <local:BerufList x:Key="berufList"/>
        <local:FamilienstandList x:Key="familienstandList"/>
    </Window.Resources>

    <Border Background="#272537" CornerRadius="20" BorderBrush="#37344e" BorderThickness="2">
        <StackPanel HorizontalAlignment="Center" Margin="10">
            <Label Content="Vorname:" />
            <TextBox x:Name="vorname" Width="100" MaxLength="50" HorizontalAlignment="Left"/>
            <Label Content="Nachname:"/>
            <TextBox x:Name="nachname" Width="100" MaxLength="50" HorizontalAlignment="Left"/>
            <Label Content="Straße &amp; Hausnummer:"/>
            <TextBox x:Name="strasse" Width="100" MaxLength="50" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Plz:"/>
                <Label Content="Ort:" Margin="80,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="combo_plz" ItemsSource="{StaticResource ortList}" DisplayMemberPath="LandPlz" Width="100" SelectionChanged="onSelectionChangedPlz"/>
                <TextBox x:Name="ort" Margin="15,0,0,0" Width="150"/>
            </StackPanel>
            <Label Content="Familienstand:"/>
            <ComboBox x:Name="combo_marital" ItemsSource="{StaticResource familienstandList}" DisplayMemberPath="Stand" Width="150" HorizontalAlignment="Left"/>
            <Label Content="E-Mail:"/>
            <TextBox x:Name="email" Width="100" MaxLength="80" HorizontalAlignment="Left"/>
            <Label Content="Telefon:"/>
            <TextBox x:Name="telefon" Width="100" MaxLength="30" HorizontalAlignment="Left"/>
            <Label Content="Abteilung:"/>
            <ComboBox x:Name="combo_abt" ItemsSource="{StaticResource abteilungList}" DisplayMemberPath="Bezeichnung" Width="150" HorizontalAlignment="Left"/>
            <Label Content="Beruf:"/>
            <ComboBox x:Name="combo_beruf" ItemsSource="{StaticResource berufList}" DisplayMemberPath="Bezeichnung" Width="150" HorizontalAlignment="Left"/>
            <Label Content="Eintrittsdatum:"/>
            <DatePicker Name="eintritt" Width="150" HorizontalAlignment="Left" SelectedDate="{x:Static sys:DateTime.Now}"/>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Background="Transparent" HorizontalAlignment="Left" Click="saveEmployeeData" ToolTip="Speichern">
                    <TextBlock FontSize="20">
                 💾
                    </TextBlock>
                </Button>
                <Button Background="Transparent" HorizontalAlignment="Left" Click="closeWindow" ToolTip="Schließen">
                    <TextBlock FontSize="20">
                 ❌
                    </TextBlock>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
